 <%= form_with(model: mymodel, url: update_password_account_configuration_path(mymodel), method: :put, class: "contents") do |form| %>
  <%= form.hidden_field :type, value: 'employee', name: 'profil[type]' %>
  <%= form.hidden_field :id, value: mymodel.user_id, name: 'profil[id]' %>
  <ul class="profile-edit-list row">
    <li class="weight-500 col-md-12">
      <h4 class="text-blue h5 mb-20">Change your password</h4>
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Old Password *</label>
        <div class="col-sm-12 col-md-10">
          <%= form.text_field :old_password, name: 'profil[old_password]', value: "", class: "form-control", placeholder: "Input old password", minlength: 3, required: true, maxlength: 100 %>
        </div>
      </div>
      <div class="form-group row mt-8">
        <label class="col-sm-12 col-md-2 col-form-label">New assword *</label>
        <div data-controller="copiedtext" class="input-group bootstrap-touchspin bootstrap-touchspin-injected col-sm-12 col-md-6">
          <span class="input-group-btn input-group-append">
            <button type="button" class="btn btn-primary bootstrap-touchspin-up" data-action="copiedtext#generate">
              Generate
            </button>
          </span>
          <%= form.text_field :password, name: 'profil[password]', class: "form-control", data: { copiedtext_target: "source" } %>
          <span class="input-group-btn input-group-append"><button type="button" class="btn btn-primary bootstrap-touchspin-up" data-action="copiedtext#copy">Copy</button></span>
          <small class="form-text text-muted">
            Copy terlebih dahulu password, sebelum di save
          </small>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-12 col-md-2 col-form-label">Confirm Password *</label>
        <div class="col-sm-12 col-md-10">
          <%= form.text_field :confirm_password, name: 'profil[confirm_password]', value: "", class: "form-control", placeholder: "Type your new password", minlength: 3, required: true, maxlength: 100 %>
        </div>
      </div>
      <div class="inline">
        <button class="btn btn-primary btn-lg" type="submit"
                                data-controller="confirmation"
                                data-action="click->confirmation#confirm"
          data-confirmation-title-after-confirm-value="Save it & logout"
          data-confirmation-text-after-confirm-value="Your file has been saved."
          data-confirmation-confirm-button-text-value="save"
          data-confirmation-message-value="If you change your password, you will be logged out and need to log in again."
          data-confirmation-url-value="/"
          >
          Simpan Data
        </button>
      </div>
      <%= link_to "Kembali", '/dashboard', class: "btn btn-warning btn-lg" %>
    </li>
  </ul>
<% end %>