<div class="main-container">
  <div class="">
    <div class="min-height-50px">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="title">
              <h4>Data Class Gym Package</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Class Gym Package</a></li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="pd-20 card-box mb-30">
      <div class="clearfix">
        <div class="pull-left">
          <h4 class="text-blue h4"><%= title %> Class Gym list</h4>
          <p class="mb-30">Please fill in the Class Gym Package form</p>
        </div>
      </div>
      <%= form_with(model: class_package, class: "contents") do |form| %>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Name *</label>
          <div class="col-sm-12 col-md-10">
            <%= form.text_field :name, class: "form-control", placeholder: "Input package name", minlength: 3, required: true %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Description *</label>
          <div class="col-sm-12 col-md-10">
            <%= form.text_area :description, class: "form-control", placeholder: "Input description package", minlength: 5, required: true %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Price *</label>
          <div class="input-group bootstrap-touchspin bootstrap-touchspin-injected col-sm-4 col-md-4">
            <span class="input-group-btn input-group-append">
              <button type="button" class="btn btn-primary bootstrap-touchspin-up">
                Rp.
              </button>
            </span>
            <%= form.number_field :price, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Available Date *</label>
          <div class="col-sm-12 col-md-10">
            <div data-controller="date-field">
              <div id="date-field" data-date-field-target="fields">
                <% (class_package.available_date || [""]).each_with_index do |date, index| %>
                  <div data-date-field-target="field" class="date-field mb-2">
                    <%= form.date_field :available_date, value: date, name: "class_package[available_date][]", class: "form-control d-inline-block w-75" %>
                  </div>
                <% end %>
              </div>
              <button type="button" data-action="click->date-field#addField" class="btn btn-primary mt-2">Add Date</button>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Status *</label>
          <div class="col-sm-12 col-md-10">
            <%= form.select :status, [["Available", "available"], ["Closed", "closed"]], { selected: "available" }, class: 'form-control', data: { controller: 'select-option-slim' } %>
          </div>
        </div>
        <div class="inline">
          <button class="btn btn-primary btn-lg" type="submit"
        data-controller="confirmation"
        data-action="click->confirmation#confirm"
            data-confirmation-title-after-confirm-value="Save it!"
            data-confirmation-text-after-confirm-value="Your file has been saved."
            data-confirmation-confirm-button-text-value="save"
            data-confirmation-message-value="Do you want to save this?"
            data-confirmation-url-value="/class_packages"
            >
            Simpan Data
          </button>
        </div>
        <%= link_to "Kembali", class_packages_path, class: "btn btn-warning btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
