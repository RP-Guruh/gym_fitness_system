

<div class="login-page">


  <div class="login-header box-shadow">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <div class="brand-logo">
        <a href="login.html">
          <%= image_tag('deskapp-logo', alt: "logo") %>
        </a>
      </div>
      <div class="login-menu">
        <ul>
          <li><a href="register.html">G&F Gym Cipayung</a></li>
        </ul>
      </div>
    </div>
  </div>


  <% flash.each do |key, value| %>
    <% toast_type = key == 'alert' ? 'toast-danger' : 'toast-success' %>
    <%= render partial: "shared/notification", locals: { message: flash[:alert] || flash[:notice], status: toast_type } %>
  <% end %>

  <div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">

    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6 col-lg-7">
          <%= image_tag('gym.png', alt:"image login") %>
        </div>
        <div class="col-md-6 col-lg-5">
          <div class="login-box bg-white box-shadow border-radius-10">
            <div class="login-title">
              <h2 class="text-center text-primary">Login To App</h2>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name))  do |f| %>
              <div class="input-group custom">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Email" %>
                <div class="input-group-append custom">
                  <span class="input-group-text"><i class="icon-copy dw dw-user1"></i></span>
                </div>
              </div>
              <div class="input-group custom">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Password" %>

                <div class="input-group-append custom">
                  <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                </div>
              </div>
              <div class="row pb-30">
                <div class="col-6">
                  <div class="custom-control custom-checkbox">

                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me, class: 'custom-control-input', id: 'customCheck1' %>
                        <%= f.label :remember_me, class: 'custom-control-label', for: 'customCheck1' %>
                      </div>
                    <% end %>

                  </div>
                </div>
                <div class="col-6">
                  <div class="forgot-password"><a href="forgot-password.html">Forgot Password</a></div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="input-group mb-0">
                    <%= f.submit "Sign in", class: "btn btn-primary btn-lg btn-block" %>

                  </div>
                </div>
              </div>
              <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




