

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Product categories" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Product categories</h1>
    <%= link_to "New product category", new_product_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="product_categories" class="min-w-full">
    <% @product_categories.each do |product_category| %>
      <%= render product_category %>
      <p>
        <%= link_to "Show this product category", product_category, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
