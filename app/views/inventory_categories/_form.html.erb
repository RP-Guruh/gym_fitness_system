<div class="main-container">
  <div class="">
    <div class="min-height-50px">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="title">
              <h4>Category inventory</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Category</a></li>
                <li class="breadcrumb-item active" aria-current="page">Inventory</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="pd-20 card-box mb-30">
      <div class="clearfix">
        <div class="pull-left">
          <h4 class="text-blue h4"><%= title %> Category inventory</h4>
          <p class="mb-30">Please fill in the product category form</p>
        </div>
      </div>
      <%= form_with(model: inventory_category, class: "contents") do |form| %>
        <% if inventory_category.errors.any? %>
          <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
            <h2><%= pluralize(inventory_category.errors.count, "error") %> prohibited this inventory_category from being saved:</h2>
            <ul>
              <% inventory_category.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Category Product Name</label>
          <div class="col-sm-12 col-md-10">
            <%= form.text_field :name, class: "form-control", placeholder: "Input Category product name", minlength: 3, required: true %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Deskripsi produk</label>
          <div class="col-sm-12 col-md-10">
            <%= form.text_area :description, rows: 4, class: "form-control",placeholder: "Input Category product description" %>
          </div>
        </div>
        <div class="inline">
          <button class="btn btn-primary btn-lg" type="submit"
        data-controller="confirmation"
        data-action="click->confirmation#confirm"
            data-confirmation-title-after-confirm-value="Save it!"
            data-confirmation-text-after-confirm-value="Your file has been saved."
            data-confirmation-confirm-button-text-value="save"
            data-confirmation-message-value="Do you want to save this?"
            data-confirmation-url-value="/inventory_categories"
            >
            Simpan Data
          </button>
        </div>
        <%= link_to "Kembali", inventory_categories_path, class: "btn btn-warning btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
