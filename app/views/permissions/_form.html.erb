<div class="main-container">
  <div class="">
    <div class="min-height-50px">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="title">
              <h4>Permission</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Permission Data</a></li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="pd-20 card-box mb-30">
      <div class="clearfix">
        <div class="pull-left">
          <h4 class="text-blue h4"><%= title %> Permission list</h4>
          <p class="mb-30">Please fill in the Permission</p>
        </div>
      </div>
      <%= form_with(model: permission, class: "contents") do |form| %>
        <% if permission.errors.any? %>
          <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
            <h2><%= pluralize(permission.errors.count, "error") %> prohibited this province from being saved:</h2>
            <ul>
              <% permission.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Role</label>
          <div class="col-sm-12 col-md-10">
            <%= form.select :role_id, @data.map { |role| 
            [role.name,role.id] 
            },
            {include_blank: true}, 
            {class: 'form-control', data: {controller: 'select-option-slim'}}
            %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Action</label>
          <div class="col-sm-12 col-md-10">
            <%= form.select :action, 
                @action_list.map { |action| [action.capitalize, action] }, 
                { include_blank: true }, 
                { class: 'form-control', data: { controller: 'select-option-slim' } }
            %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-12 col-md-2 col-form-label">Model</label>
          <div class="col-sm-12 col-md-10">
            <%= form.select :resource, 
                @resource_list.map { |resource| [resource.capitalize, resource] }, 
                { include_blank: true }, 
                { class: 'form-control', data: { controller: 'select-option-slim' } }
            %>
          </div>
        </div>
        <div class="inline">
          <button class="btn btn-primary btn-lg" type="submit"
        data-controller="confirmation"
        data-action="click->confirmation#confirm"
            data-confirmation-title-after-confirm-value="Save it!"
            data-confirmation-text-after-confirm-value="Your file has been saved."
            data-confirmation-confirm-button-text-value="save"
            data-confirmation-message-value="Do you want to save this?"
            data-confirmation-url-value="/permissions"
            >
            Simpan Data
          </button>
        </div>
        <%= link_to "Kembali", permissions_path, class: "btn btn-warning btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
